<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amanda.driverapplication.PreviousOffenses"
    tools:showIn="@layout/activity_previous_offenses"
    android:background="@drawable/banssxz">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bant" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bak"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Crime Commited:"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Crime recorded"
        android:id="@+id/crime"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fee Charged:"
        android:id="@+id/cc"
        android:layout_below="@+id/crime"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Crime recorded"
        android:id="@+id/txtFee"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cc"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Issued Date:"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Crime recorded"
        android:id="@+id/txtID"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton9"
        android:layout_above="@+id/imageButton5"
        android:layout_toStartOf="@+id/imageButton5"
        android:layout_marginBottom="41dp"
        android:background="@drawable/pv"
        android:onClick="movePrev" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton10"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_toEndOf="@+id/imageButton5"
        android:background="@drawable/zz"
        android:onClick="moveNext" />

</RelativeLayout>
