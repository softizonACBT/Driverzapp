<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amanda.driverapplication.Home"
    tools:showIn="@layout/activity_home"
    android:background="@drawable/tic2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hi You are logged as"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/txtname"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/txtln"
        android:textColor="#ffffff"
        android:layout_above="@+id/txtname"
        android:layout_alignEnd="@+id/imageView3" />

    <ImageButton
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton7"
        android:background="@drawable/phis"
        android:layout_below="@+id/imageButton6"
        android:layout_centerHorizontal="true"
        android:onClick="payhistory" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="95dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/sdss" />

    <ImageButton
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton3"
        android:background="@drawable/pp"
        android:layout_below="@+id/imageButton8"
        android:layout_alignStart="@+id/imageButton8"
        android:onClick="nextAct" />

    <ImageButton
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton4"
        android:background="@drawable/ppal"
        android:layout_above="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6"
        android:onClick="onliniPay" />

    <ImageButton
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton6"
        android:background="@drawable/pof"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageButton7"
        android:onClick="precrime" />

    <ImageButton
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton8"
        android:background="@drawable/pr"
        android:layout_below="@+id/imageButton7"
        android:layout_alignStart="@+id/imageButton7"
        android:onClick="addrem" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton17"
        android:background="@drawable/logos"
        android:onClick="logoutas"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
